.row
  .col-sm-3
    %h1= @car.name
    %p= 'Car number - ' + @car.number_auto.to_s
    %p= 'Year of issue - ' + @car.year.to_s
    %p= 'Color - ' + @car.color.to_s
    %p= 'City - ' + @car.city.to_s
    %p= 'Theft date - ' + @car.theft_date.to_s
    %p= 'Tel. Number - ' + @car.telephone.to_s
    %p= 'Money - ' + @car.money.to_s
    %p= 'Description - ' + @car.description.to_s
    %p= 'Address - ' + @car.address.to_s

  .col-sm-9
    %div{:style => "width: 800px;"}
      #map{:style => "width: 800px; height: 400px;"}

      :javascript
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(#{raw @hash.to_json});
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
